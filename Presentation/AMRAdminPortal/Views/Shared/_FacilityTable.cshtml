@model IEnumerable<AMR.Models.FacilitySetupPracticeModel>

<table  class="table">

        <thead>

            <tr>

              <th>Facility ID</th>
                <th>Facility Name</th>
                <th>Practice Name</th>
                <th>Address</th>
                <th>Edit</th>
                
            </tr>

        </thead>

        <tbody>
            @if(Model != null && Model.Count() > 0)
            {
                int counter=0;
                foreach (var item in Model)
                {
                    System.Text.StringBuilder jsonString = new System.Text.StringBuilder();

                    jsonString.Append(" { ");
                    jsonString.Append("\"ID\": \"" + item.FacilityId + "\",");
                    jsonString.Append("\"FacilityName\":  \"" + item.FacilityName + "\",");
                    jsonString.Append("\"Address1\":  \"" + item.Address1 + "\",");
                    jsonString.Append("\"Address2\":  \"" + item.Address2 + "\",");
                    jsonString.Append("\"Address3\":  \"" + item.Address3 + "\",");
                    jsonString.Append("\"City\":  \"" + item.City + "\",");
                    jsonString.Append("\"State\":  \"" + item.State + "\",");
                    jsonString.Append("\"Comment\":  \"" + item.Comment + "\",");
                    
                    jsonString.Append("\"PostalCode\":  \"" + item.PostalCode + "\",");
                    jsonString.Append("\"CountryCode\": \"" + item.CountryCode + "\"");
                    jsonString.Append("}");
                    
            <tr >
                <td >@item.FacilityId <input type="hidden" id="hdfacility-@item.FacilityId.ToString()" value="@jsonString.ToString()" /></td>
                <td>@item.FacilityName</td>
                      <td>@item.PracticeName</td>
                    @if(item.Address1 =="" && item.State =="" && item.City =="" && item.PostalCode =="")
                {
                    <td></td>
                }
                else
                {
                   <td>@item.Address1 ,@item.City ,@item.State ,@item.PostalCode</td>
                }
                <td><img src="Content/img/Edit.png" style="margin-right: 50px;  height:20px;cursor:pointer; " onclick="EditFacility(@item.FacilityId);"></td>
            </tr>
                    counter++;
                }
            }
             else
            {
            <tr>
                <td colspan="4">No Information Found</td>
            </tr>
            }
        </tbody>

    </table>




