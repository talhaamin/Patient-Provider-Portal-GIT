<div id="containment-wrapper" style="border-bottom-style: none; border-top-style: none; border-right-style: none; border-left-width: 1px; border-left-color: rgb(166, 201, 226);">


    <!-- Tabs -->
    <div id="tabs" style="width: 98%; font-size: 12px; margin-top: 5px; margin-right: 4px; height: 98.5%;display: none;">
        <ul>
            <li><a href="#tabs-1" style="height: 30px;">Emergency Contact</a></li>


        </ul>
        <div id="tabs-1">
            <!--Start of First Box -->
            <div id="#" class="draggable ui-widget-content ui-corner-all" style="position: relative; top: 0px; height: 230px; left: 0px; width: 100%;">
                <div id="cart1" style="position: absolute; top: 1px; left: 0px; right: 0px;" class="ui-corner-all">
                    <h5 class="ui-dialog-titlebar ui-widget-header ui-corner-all ui-helper-clearfix"
                        style="margin-top: -1px; font-weight: normal; padding: 3px;">
                        <span style="font-weight: bold;">Emergency Contact </span>

                        <!-- third ICON -->
                        <div id="divAddEmergency" onmousemove="removing_class();" onmouseover="removing_class(); " onmousedown="removing_class();" onclick="removing_class(); clearFields();addEmergencyContact();" onmouseout="removing_class();" onmouseup="removing_class();" onfocus="removing_class();" style="cursor: pointer; float: right; width: auto; height: 20px;">

                            <img src="@Url.Content("~/Content/img/add.png")" id="imgAddEmergency" />
                            <span class="anc" style="padding-right: 4px;">Add</span>
                        </div>
                        <!-- end of third icon-->
                    </h5>

                    <div id="divEmergencyContactList" class="ui-widget-content" style="position: relative; top: -9px; border: none; overflow-y: auto; height: 190px;">
                        @Html.Partial("~/Views/Templates/EmergencyContact/_EmergencyContact.cshtml",Model.PatientEmergency)
                    </div>
                </div>
            </div>
            <!-- end of 1st box -->
        </div>

    </div>
</div>



<!-------- Start Pop up emergency contact(add/update) --------->
<div id="emergency-contact-form" title="Emergency Contacts" style="overflow: hidden;">
    <center>  <span class="validateTips"></span></center>
    <table width="699" height="320" border="0" cellpadding="0" cellspacing="2">
        <tr>
            <input type="hidden" id="hdnCurrentPatientEmergencyID" value=""  />
            <td width="220" height="36" align="right" ><span class="star" style="color:red;">*</span>Contact's Name:</td>
            <td width="14">&nbsp;</td>
            <td colspan="2">
                <label for="cname_txt"></label>
                <input type="text" name="cname_txt" id="txtEname" class="txt" style="width:300px"/></td>
        </tr>
        <tr>
            <td align="right" height="36" ><span class="required" style="color:red;">*</span>Address 1:</td>
            <td align="right">&nbsp;</td>
            <td colspan="2">
                <input type="text" name="add_txt" id="txtEAdd1" class="txt" style="width:300px"/></td>
        </tr>
        <tr>
            <td align="right" height="36">Address 2:</td>
            <td align="right">&nbsp;</td>
            <td colspan="2">
                <input type="text" name="add_txt" id="txtEAdd2" class="txt"  style="width:300px"/></td>
        </tr>
        <tr>
            <td align="right" height="35"><span class="required" style="color:red;">*</span>City :</td>
            <td>&nbsp;</td>
            <td colspan="2">
                <input type="text" name="city_txt" id="txtECity" class="txt" style="width:150px"/></td>
        </tr>
        <tr>
            <td align="right" height="35"><span class="required" style="color:red;" >*</span>State :</td>
            <td>&nbsp;</td>
            <td colspan="2">

                @Html.DropDownList("cmbEStates", Model.States.ToStatesModelSelectList(), new { id = "cmbEStates", @class = "txt",style="width:250px"})
            </td>
        </tr>
        <tr>
            <td align="right" height="35"><span class="required" style="color:red;">*</span>Zip Code :</td>
            <td>&nbsp;</td>
            <td colspan="2">
                <input type="text" name="zcode_txt" id="txtEZip" class="txt" style="width:100px"/></td>
        </tr>
        <tr>
            <td align="right" height="36">Country :</td>
            <td>&nbsp;</td>
            <td colspan="2">
                <label for="count_com"></label>

                @Html.DropDownList("cmbECountry", Model.Country.ToCountryModelSelectList(), new { id = "cmbECountry", @class = "txt",style="width:300px" })

            </td>
        </tr>
        <tr>
            <td align="right" height="35" ><span class="star" style="color:red;">*</span>Email:</td>
            <td>&nbsp;</td>
            <td colspan="2">
                <input type="text" name="email_txt" id="txtEmail" class="txt" style="width:200px"/></td>
        </tr>
        <tr>
            <td align="right" height="35"><span class="star" style="color:red;">*</span>Home Phone:</td>
            <td>&nbsp;</td>
            <td colspan="2">
                <input type="text" name="phone_txt" id="txtEHomephone" class="txt" style="width:150px"/>
            </td>
        </tr>
        <tr>
            <td align="right" height="35">Office Phone:</td>
            <td>&nbsp;</td>
            <td colspan="2">
                <input type="text" name="phone_txt" id="txtEWorkPlacephone" class="txt" style="width:150px"/>
            </td>
        </tr>
        <tr>
            <td align="right" height="35">Cell Phone:</td>
            <td>&nbsp;</td>
            <td colspan="2">
                <input type="text" name="cell_txt" id="txtEMobphone" class="txt" style="width:150px"/>
            </td>
        </tr>
        <tr>
            <td align="right" height="35"><span class="required" style="color:red;">*</span>Relationship :</td>
            <td>&nbsp;</td>
            <td colspan="2">

                @Html.DropDownList("cmbERel", Model.Relationships.ToRelationshipModelOnlyIDSelectList(), new { @class = "txt", id = "cmbERel",style="width:300px;  padding:2px;" }) </td>

            </td>
        </tr>
        <tr>
            <td height="35">&nbsp;</td>
            <td>&nbsp;</td>
            <td width="23">
                <input type="checkbox" name="checkbox" id="chkIsPrimary" />
                <label for="checkbox"></label>
            </td>
            <td width="432">Primary Contact</td>
        </tr>

        

    </table>

</div>
<!-------- End Pop up emergency contact(add/update) --------->








