@model IEnumerable<AMR.Models.PatientMedicalDocumentModel>
@using System.Web.Script.Serialization;

<table class="box-table-a" id="tbl-MedicalDocument" summary="MyMedicalDocuments">
                            <thead>
                                <tr>
                                    <!--<th scope="col" style="margin-right: 10px;">
                                        <input name="check" type="checkbox" class="CheckAll" id="chk_3" onclick="checkAll(this);" />
                                    </th>-->
                                    <th scope="col"></th>
                                    <th scope="col">Upload Date</th>
                                    <th scope="col">Physician</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Comments</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Permission</th>
                                    <th scope="col" style="width:35px;">Edit</th>
                                    <th scope="col" style="width:35px;">Delete</th>
                               </tr>
                            </thead>
                            <tbody id="tbodyPatientDocumentList">
                                 @if (Model != null && Model.Count() > 0)
                                {
                                    
                                     
                                    int counter = 0;
                                    foreach (var patientDoc in Model)
                                    {
                                        var jsonString = new JavaScriptSerializer().Serialize(patientDoc);
                                        
                                        <tr @((counter%2==0)? "class=r1" : "class=r0")>
                                          <!--<td>
                                            <input type="checkbox" data-myVal="@(patientDoc.DocumentCntr)"  id="chk3"  name="chk3[]"/>
                                          </td>-->
                                          <td>
                                            <input type="hidden" id="@patientDoc.DocumentCntr" value="@jsonString"/>
                                          </td>
                                          <td>@patientDoc.DateCreated.ToString("MM/dd/yyyy")</td>
                                          <td>@patientDoc.DoctorName</td>
                                          <td><span class="LinkHighlight hoverMe" onclick="ViewDocumentAttachment('@(patientDoc.DocumentCntr +"|"+ patientDoc.DocumentFormat)')"> @((patientDoc.DocumentDescription.Length>22)?patientDoc.DocumentDescription.Substring(0,22)+ "...":patientDoc.DocumentDescription) </span></td>
                                          <td>@((patientDoc.Notes.Length > 22)?patientDoc.Notes.Substring(0,22)+ "..." : patientDoc.Notes)</td>
                                          <td>@((patientDoc.Viewable)?"Shared":"Hidden")</td>
                                          <td><span class="LinkHighlight hoverMe" onclick="shareHidePatientMedicalDocument('@((patientDoc.Viewable) ? ("0|" + patientDoc.DocumentCntr) : ("1|" + patientDoc.DocumentCntr))');"><img src='@((patientDoc.Viewable)? "Content/img/hide.png" : "Content/img/share.png")'/>  @((patientDoc.Viewable) ? "Hide" : "Share") </span></td>
                                          <td align="center">
                                               <img onclick="EditPatientMedicalDocument('@patientDoc.DocumentCntr');" id="imgEditPatMedDoc" src="@Url.Content("~/Content/img/edit.png")" />
                                          </td>
                                          <td align="center">
                                               <img onclick="deletePatMedDocument('@patientDoc.DocumentCntr');" id="imgDeletePatMedDoc"  src="@Url.Content("~/Content/img/delete.png")" />
                                          </td>
                                              
                                        </tr> 
                                        counter++;      
                                    }
                                }
                                else
                                {
                                    <tr><td>No Information Available</td></tr>
                                }
                                </tbody>
</table>

