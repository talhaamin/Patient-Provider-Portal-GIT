@model IEnumerable<AMR.Models.ProfessionalAdvisorModel>
@using System.Web.Script.Serialization;

<table class="box-table-a" id="tbl-ProfessionalAdvisor" summary="GeneralDocuments">
                            <thead>
                                <tr>
                                    <th scope="col"></th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Advisor </th>
                                    <th scope="col">Agent</th>
                                    <th scope="col">Office Phone</th>
                                    <th scope="col" style="width:40px;">Edit</th>
                                    <th scope="col" style="width:40px;">Delete</th>
                               </tr>
                            </thead>
                            <tbody id="tbodyProfessionalAdvisorList">
                                @if (Model != null && Model.Count() > 0)
                                {
                                    int counter = 0;
                                    foreach (var advisor in Model)
                                    {
                                        var jsonString = new JavaScriptSerializer().Serialize(advisor);
                                        
                                        <tr @((counter % 2 == 0) ? "class=r1" : "class=r0")>
                                            <td>
                                                 <input type="hidden" id="@advisor.PatientAdvisorId" value="@jsonString"/>
                                            </td>
                                            <td>@((!string.IsNullOrEmpty(advisor.AdvisorDesc))?advisor.AdvisorDesc : advisor.Value)</td>
                                            <td>@advisor.Name</td>
                                            <td>@advisor.ContactAgent</td>
                                            <td>@advisor.WorkPhone</td>
                                            <td align="center">
                                                    <img onclick="OpenEditProfessionalAdvisorForm('@advisor.PatientAdvisorId');" id="imgEditProfessionalAdvisor"  src="@Url.Content("~/Content/img/edit.png")" />
                                            </td>
                                            <td align="center">
                                                    <img onclick="deleteProfessionalAdvisor('@advisor.PatientAdvisorId');" id="imgDeleteProfessionalAdvisor"  src="@Url.Content("~/Content/img/delete.png")" />
                                            </td>
                                        </tr>
                                        counter++;
                                    }
                                }
                                else
                                {
                                     <tr><td></td><td>No Information Available</td></tr>
                                }        
                            </tbody>
</table>


