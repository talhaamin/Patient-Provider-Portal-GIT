@model IEnumerable<AMR.Models.ProviderInfoModel>
@using System.Text;
@using System.Web.Script.Serialization;


<table class="box-table-a" id="tab-providers" summary="Provider Information">
                                        <thead>
                                            <tr>
                                                <th scope="col">Provider Name</th>
                                                <th scope="col">Practice Name</th>
                                                <th scope="col">Practice Address</th>
                                                <th scope="col">Practice Phone</th>
                                               @* <th scope="col" style="text-align:center;">Details</th>*@
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null && Model.Count()>0)
                                            {
                                                int counter=0;
                                                foreach (var item in Model)
                                                {
                                                   
                                             
                                                   
                                                     <tr class="@((counter % 2 == 0) ? "r1" : "r0")">
                                                        <td>@item.Name</td>
                                                  
                                                        <td>@item.FacilityName </td>
                                                        <td>@item.Address</td>
                                                        <td>@item.Phone</td>
                                                        @*<td align="center">  <img  onclick="visitDetails(@item.VisitID); "   src="Content/img/details.png" />  </td>*@
                                                    </tr>
                                                    counter++;
                                                }
                                            }
                                            else
                                            {
                                              <tr>
                                <td width="200px;">No Information Available.</td>
                            </tr>
                                            }
                                        </tbody>
</table>
